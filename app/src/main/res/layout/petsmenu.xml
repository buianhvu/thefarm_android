<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.farm.PetsActivity"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/colorBackground"
    android:gravity="bottom"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bar"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="ANIMALS IN FARM"
            android:textColor="@color/text_color_1"
            android:textSize="15sp"
             />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pig_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="150dp"
        android:layout_weight="1.50"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/image_pig"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/pig"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/image_buffalo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/image_pig"
            android:layout_toRightOf="@+id/image_pig"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/buffalo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cow_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.50"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_cow"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/cow" />

        <ImageView
            android:id="@+id/image_chicken"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/image_cow"
            android:layout_toRightOf="@+id/image_cow"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/chicken" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/bar"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/btnAnimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            android:background="@color/bar_select"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/pets" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="ANIMALS"
                android:textColor="@color/text_color_1"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnFinace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/money_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="FINANCE"
                android:textColor="@color/text_color_1"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnFood"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="FOOD"
                android:textColor="@color/text_color_1"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnMedical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/medical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="MEDICAL"
                android:textColor="@color/text_color_1"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
