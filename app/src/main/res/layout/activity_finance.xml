<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.farm.PetsActivity"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/colorBackground"
    android:gravity="bottom">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bar"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="$ 11111 "
            android:textColor="@color/text_color_1"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/money_add_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/image_money_add"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/add_money" />

        <TextView
            android:id="@+id/tvbuffalo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_money_add"
            android:gravity="center_vertical"
            android:text="Add money"
            android:textColor="@color/bar"
            android:textSize="20sp"
             />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/money_withdraw_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">

        <ImageView
            android:id="@+id/image_money_withdraw"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/withdraw_money" />

        <TextView
            android:id="@+id/tvMoneyWithdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_money_withdraw"
            android:gravity="center_vertical"
            android:text="Withdraw money"
            android:textColor="@color/bar"
            android:textSize="20sp"
          />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/transaction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">

        <ImageView
            android:id="@+id/image_money_transaction"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/transaction" />

        <TextView
            android:id="@+id/tvMoneyWithdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_money_transaction"
            android:gravity="center_vertical"
            android:text="Transaction History"
            android:textColor="@color/bar"
            android:textSize="20sp"
             />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/bar"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/btnAnimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/pets" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="ANIMALS"
                android:textColor="@color/text_color_1"
                android:textSize="10sp"
                 />
        </LinearLayout>
        <LinearLayout
            android:background="@color/bar_select"
            android:id="@+id/btnFinace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/money_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="FINANCE"
                android:textColor="@color/text_color_1"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnFood"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="FOOD"
                android:textColor="@color/text_color_1"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnMedical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/medical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="MEDICAL"
                android:textColor="@color/text_color_1"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
