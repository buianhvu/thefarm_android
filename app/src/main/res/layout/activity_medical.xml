<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.farm.PetsActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/colorBackground"
    android:weightSum="5">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="0.5">-->
    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/money_bar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:minHeight="?attr/actionBarSize"-->
    <!--android:theme="?attr/actionBarTheme"-->
    <!--/>-->
    <!--</LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bar"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="MEDICAL CARE"
            android:textColor="@color/text_color_1"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnHealthy_pets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/image_food_add"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/healthy_icon" />

        <TextView
            android:id="@+id/tvBuyFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_food_add"
            android:gravity="center_vertical"
            android:text="Healthy Animals"
            android:textColor="@color/bar"
            android:textSize="24sp"
             />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnSick_Pets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">

        <ImageView
            android:id="@+id/food_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/sick_icon" />

        <TextView
            android:id="@+id/tvFoodView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/food_view"
            android:gravity="center_vertical"
            android:text="Sick Animals"
            android:textColor="@color/bar"
            android:textSize="24sp"
             />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/bar"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/btnAnimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/pets" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="ANIMALS"
                android:textColor="@color/text_color_1"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnFinace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/money_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="FINANCE"
                android:textColor="@color/text_color_1"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnFood"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="FOOD"
                android:textColor="@color/text_color_1"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/bar_select"
            android:id="@+id/btnMedical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/medical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="MEDICAL"
                android:textColor="@color/text_color_1"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
